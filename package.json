{
  "name": "breaking-change",
  "version": "1.0.0",
  "description": "Automatically update an issue and/or discussion with breaking changes.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "ncc build \"src/index.js\" \"-m\" \"--license\" \"NOTICE.txt\"",
    "postbuild": "sh \"scripts/postbuild.sh\"",
    "test": "ava",
    "preversion": "git pull && npm ci && npm run build && npm t",
    "version": "git add \"-A\"",
    "release": "bash \"./scripts/version.sh\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tmillr/breaking-change.git"
  },
  "author": "Tyler Miller",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tmillr/breaking-change/issues"
  },
  "homepage": "https://github.com/tmillr/breaking-change#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "ava": "^5.0.1",
    "prettier": "^2.7.1",
    "@vercel/ncc": "^0.34.0"
  }
}
